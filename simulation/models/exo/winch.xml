<mujoco model="winch">

  <extension>
    <plugin plugin="mujoco.elasticity.cable"/>
  </extension>

  <option timestep="0.0004" jacobian="dense"/>
  <size nconmax="500" njmax="1500" nstack="1000000"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2"
      width="512" height="512" mark="cross" markrgb=".8 .8 .8"/>

    <material name="matplane" reflectance="0.3" texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <geom name="ground" type="plane" size="0 0 1" material="matplane"/>
    <body name="winch" pos="0 0 0.13">
      <joint name="winch"/>
      <geom type="cylinder" size="0.1 0.1"/>
      <geom type="cylinder" size="0.2 0.01" pos="0 0 -0.11"/>
      <body name="B0" pos="0.11 0 0">
        <inertial mass="0.01" diaginertia="0.0001 0.0001 0.0001" pos="0 0 0"/>
        <joint type="ball"/>
        <composite prefix="actuated" type="cable" curve="s" count="100 1 1"
                    size="10 .15 4" offset="0 0 0" initial="ball">
            <joint kind="main" damping="0.15" armature="0.01"/>
            <geom type="capsule" size=".005" rgba=".8 .2 .1 1"/>
        </composite>
      </body>        
    </body>
  </worldbody>
  <actuator>
    <velocity name="winch" joint="winch" kv="200" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>
</mujoco>
